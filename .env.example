# Flight Monitor API Configuration
# Copy this file to .env and fill in your actual API keys

# Amadeus Flight API (Primary data source)
# Get your API key at: https://developers.amadeus.com/
AMADEUS_API_KEY=your_amadeus_api_key_here
AMADEUS_API_SECRET=your_amadeus_api_secret_here

# RapidAPI Key (Secondary data source)  
# Get your API key at: https://rapidapi.com/
RAPIDAPI_KEY=your_rapidapi_key_here

# Email Configuration (for price alerts)
EMAIL_SENDER=your_email@gmail.com
EMAIL_PASSWORD=your_app_specific_password
EMAIL_RECIPIENT=recipient@gmail.com

# Optional: SMS Configuration (for mobile alerts)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890